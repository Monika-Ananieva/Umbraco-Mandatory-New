@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.ContactUs>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
    Layout = "Master.cshtml";
}

    <div class="container-fluid max-width">
        <div class="row">
            <div class="col-lg-12">
                <h1>Don't be a stranger...</h1>
                <h1 class="green">Get in touch with us!</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-6 contact-content">
                <p>
                    Feel free to drop us a message at anytime. We are always open to discussing
                    new projects, creative ideas or opportunities to be part of your visions. We also love answering questions!
                    After you e-mail us, we will make sure to get back in touch with you in the next 2 work days.
                </p>

                <h4>Need help?</h4>
                <p class="contact-help">customer-support@mail.com</p>

                <h4>Need help?</h4>
                <p class="contact-help">+4 8 15 16 23 42</p>

                <h4>Our social media</h4>
                <p class="contact-help">
                    <i class="fab fa-lg fa-facebook"></i>
                    <i class="fab fa-lg fa-twitter"></i>
                    <i class="fab fa-lg fa-instagram"></i>
                    <i class="fab fa-lg fa-linkedin"></i>
                    <i class="fab fa-lg fa-github"></i>
                </p>

                <hr />
            </div>

            <div class="col-lg-6">
                @Html.Action("Index", "ContactFormSurface")
            </div>
        </div>


    </div>


